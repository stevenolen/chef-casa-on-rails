# Managed by Chef for node <%= node['fqdn'] -%>.

<% if !@config.keycloak_site.nil? %>
omniauth:
  - :keycloak_openid
  - casa
  - client_options:
      site: <%= @config.keycloak_site %>
      realm: shibboleth
    authorize_params:
      kc_idp_hint: uclashib
<% end %>

login_route: <%= @config.keycloak_site.nil? ? "/session" : "/auth/keycloakopenid" %>
